<span class="languageswitcher">
	<?php if(count($this->languages) > 1): ?>
		<select id="languageswitcher">
		<?php foreach ($this->languages as $language): ?>
			<?php 
				if($language['code'] == $this->langselected){
					$selected = "selected";
				}else{
					$selected = "";
				}
				
				$locale = strtolower($language['language'][0].$language['language'][1]);
			?>
			<option <?php echo $selected?> value="<?php echo $this->uri . "?lang=" . $locale ?>"><? echo $this->translate($language['language']) ?></option>
			
	    <?php endforeach;?>
	    </select>
	<?php endif;?>    
</span>
