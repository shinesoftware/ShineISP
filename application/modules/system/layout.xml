<?xml version="1.0" encoding="UTF-8"?>
<layout>

    <!-- Frontend Template Section -->
	<default template="1column"> <!-- Template set for all the frontend pages -->
	</default>
	
	
	<!-- Set a cronjob in your hosting control panel that executes the http://www.yourdomain.com/system/cron/ 
		 and you have to set the start of the cron each 5 minutes
	-->
	<cron>
		<!-- 8:30 every day -->
		<execute time="30 8 * * *">
			<script class="Orders" method="checkExpiringOrders">Check the expired orders</script>
		</execute>
		
		<!-- 0:30 every day -->
		<execute time="0 30 * * *">
			<script class="OrdersItems" method="checkServices">Check subscribed services</script>
		</execute>
		
		<!-- 0:00 every first day of the month -->
		<execute time="0 0 1 * *">
			<script class="Shineisp_Api_POEditor_Main" method="download">Update the language translation</script>
		</execute>
		
		<!-- 2:00 every 1st of the month -->
		<execute time="0 2 1 * *">
			<script class="Orders" method="cleanNotPayedOrders">Clean not payed orders</script>
		</execute>
		
		<!-- 23:30 on monday -->
		<execute time="30 23 * * 1">
			<script class="Orders" method="remindersEmail">Send a reminder to all the customers</script>
		</execute>
		
		<!-- 8:30 on monday -->
		<execute time="30 8 * * 1">
			<script class="Orders" method="checkOrders">Check orders that the customers have to paid and notice him by email</script>
		</execute>
		
		<!--  all the day each 30 minutes -->
		<execute time="*/30 * * * *">
			<script class="Newsletters" method="send_queue">Check the newsletter queue</script>
		</execute>
		
		<!-- 17:00 every day -->
		<execute time="0 17 * * *">
			<script class="Shineisp_Api_Themes_Templatemonster_Main" method="parse">Update the Monster Templates</script>
		</execute>
	</cron>

</layout>